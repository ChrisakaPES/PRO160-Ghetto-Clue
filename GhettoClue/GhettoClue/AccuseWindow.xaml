<Window x:Class="GhettoClue.AccuseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AccuseWindow" Height="300" Width="300" WindowStyle="None">
    <StackPanel>
        <Label HorizontalAlignment="Center">Make your accusation,</Label>
        <Label HorizontalAlignment="Center" x:Name="PlayerNameLabel" />
        <ComboBox x:Name="CharacterComboBox">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>

        </ComboBox>
        <ComboBox x:Name="RoomComboBox">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>

        </ComboBox>
        <ComboBox x:Name="WeaponComboBox">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="ConfirmButton"
                Width="100px"
                Height="25px"
                Content="Confirm"
                Click="ConfirmButton_Click"
            ></Button>
    </StackPanel>
</Window>
