<Window x:Class="GhettoClue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"  WindowState="Normal" Height="792.607" Width="1331.033">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="343*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="123*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="909*"/>
            <ColumnDefinition Width="182*"/>
            <ColumnDefinition Width="232*"/>
        </Grid.ColumnDefinitions>


        <ComboBox x:Name="player" Grid.Column="2" Grid.Row="0" ScrollViewer.CanContentScroll="False" SelectionChanged="player_SelectionChanged" Margin="0,0,0,304" Grid.RowSpan="2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="1" Grid.Row="0"  Content="{Binding Name}" FontSize="15"/>
                        <Label Grid.Column="1" Grid.Row="1"  Content="{Binding background}" FontSize="13"/>
                        <Label Grid.Column="0" Grid.RowSpan="2" Background="Crimson"/>
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DataGrid x:Name="CharacterGrid" Grid.Column="1" Grid.Row="3" Background="BlanchedAlmond" ItemsSource="{Binding}" Margin="2,10,230,0" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="WeaponGrid" ItemsSource="{Binding}" Background="CadetBlue" Grid.Row="3" Grid.Column="2" Margin="7,8,10,10"/>
        <DataGrid x:Name="RoomGrid" ItemsSource="{Binding}" Background="Aquamarine" Grid.Row="4" Grid.Column="1" Margin="2,16,230,2" Grid.ColumnSpan="2"/>

        <StackPanel x:Name="DetectiveNotes" Grid.Column="1" Grid.RowSpan="2" Background="Aqua">            
        <DataGrid x:Name="DNotes_Characters" ItemsSource="{Binding}"/>
        <DataGrid x:Name="DNotes_Weapons" ItemsSource="{Binding}" />
        <DataGrid x:Name="DNotes_Rooms" ItemsSource="{Binding}" />
        </StackPanel>

        <ListBox ItemsSource="{Binding Players}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Path=Item.ToString()}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Canvas x:Name="gameboard" Grid.Column="0" Grid.Row="1" Background="LightGray" Grid.RowSpan="4" MouseLeftButtonDown="gameboard_MouseLeftButtonDown">
            <Grid x:Name="gameGrid" Height="761" Width="908" Canvas.Top="-43">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="2" Grid.Row="0" Fill="Brown" Stroke="Gray" StrokeThickness="3"/>
                <Rectangle Grid.Column="6" Grid.Row="0" Fill="DarkGray" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="0" Grid.Row="2" Fill="Yellow" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="0" Grid.Row="6" Fill="Green" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="2" Grid.Row="1" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="6" Grid.Row="1" Fill="Black" Stroke="Gray" StrokeThickness="3" />
