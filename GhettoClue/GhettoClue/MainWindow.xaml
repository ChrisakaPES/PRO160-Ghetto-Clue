<Window x:Class="GhettoClue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gb="clr-namespace:GhettoClue"
        Title="MainWindow" Height="890.135" Width="1430.906">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="506"/>
            <RowDefinition Height="351"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="947"/>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>

<!--Region PlayerBox-->
        <ComboBox x:Name="player" Grid.Column="2" ScrollViewer.CanContentScroll="False" Margin="0,57,0,306">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="1" Grid.Row="0"  Content="{Binding Name}" FontSize="15"/>
                        <Label Grid.Column="1" Grid.Row="1"  Content="{Binding background}" FontSize="13"/>
                        <Label Grid.Column="0" Grid.RowSpan="2" Background="Crimson"/>
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Content="Characters:" FontSize="20" HorizontalAlignment="Center" Grid.Column="2" Margin="76,10,72,446"/>
<!--End Region-->
        
<!--Region Player Hand-->
        <StackPanel x:Name="PlayerHand" Grid.RowSpan="2" Background="DarkOrchid" Grid.Row="1" Grid.Column="1">
            <Label Content="Yo Hand:" FontSize="20" HorizontalAlignment="Center"/>
            <DataGrid CanUserAddRows="False" x:Name="CharacterGrid" Background="BlanchedAlmond" ItemsSource="{Binding}" />
            <DataGrid CanUserAddRows="False" x:Name="WeaponGrid" ItemsSource="{Binding}" Background="CadetBlue"/>
            <DataGrid CanUserAddRows="False" x:Name="RoomGrid" ItemsSource="{Binding}" Background="Aquamarine" />
        </StackPanel>
<!--End Region-->
        
<!--Region Detective Notes-->
        <StackPanel x:Name="DetectiveNotes" Grid.Column="1" Background="DeepPink">
            <Label Content="Detective Notes:" FontSize="20" HorizontalAlignment="Center" />
            <DataGrid CanUserAddRows="False" x:Name="DNotes_Characters" ItemsSource="{Binding}"/>
            <DataGrid CanUserAddRows="False" x:Name="DNotes_Weapons" ItemsSource="{Binding}" />
            <DataGrid CanUserAddRows="False" x:Name="DNotes_Rooms" ItemsSource="{Binding}" />
        </StackPanel>
<!--End Region-->

        <gb:GameBoard x:Name="gameControl"/>

<!--Region Buttons-->
        <Button x:Name="turn" Height="50" Width="150" Content="END TURN" FontSize="20" Grid.Column="2" Margin="54,339,47,117"/>
        <Ellipse x:Name="help" Height="25" Width="25" Grid.Column="2" Margin="216,316,10,10" Grid.Row="1" Fill="Blue" Stroke="Black" StrokeThickness="2"/>
        <Button x:Name="roll" Height="50" Width="100" Content="ROLL" FontSize="20"  Grid.Column="2" Margin="76,101,75,200" Grid.Row="1"/>
        <Image x:Name="die_placement" Margin="62,184,61,67" Grid.Row="1" Grid.Column="2">
            <Image.Source>
                <BitmapImage UriSource="Images/1.png" />
            </Image.Source>
        </Image>
<!--End Region-->
    </Grid>
</Window>
