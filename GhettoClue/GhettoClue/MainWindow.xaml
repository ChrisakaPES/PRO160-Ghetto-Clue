                <Label Background="AliceBlue" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Column="7" Content="room"/>
                <Label Background="AliceBlue" Margin="0,0,0,-1" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="7" Content="room"/>
                <Label Background="AliceBlue" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Column="7" Grid.Row="7" Content="room"/>
                <Label Background="AliceBlue" Grid.RowSpan="2" Grid.Column="4" Grid.Row="3" Content="cellar" Margin="0,1,0,0"/>
