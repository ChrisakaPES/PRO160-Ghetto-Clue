        <ComboBox x:Name="player" Grid.Column="2" Grid.Row="0" ScrollViewer.CanContentScroll="False" SelectionChanged="player_SelectionChanged" Margin="0,36,0,268" Grid.RowSpan="2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="1" Grid.Row="0"  Content="{Binding Name}" FontSize="15"/>
                        <Label Grid.Column="1" Grid.Row="1"  Content="{Binding background}" FontSize="13"/>
                        <Label Grid.Column="0" Grid.RowSpan="2" Background="Crimson"/>
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DataGrid x:Name="CharacterGrid" Grid.Row="3" Background="BlanchedAlmond" ItemsSource="{Binding}" Margin="0,39,727,10"/>
        <DataGrid x:Name="WeaponGrid" ItemsSource="{Binding}" Background="CadetBlue" Grid.Row="3" Margin="374,39,320,10"/>
        <DataGrid x:Name="RoomGrid" ItemsSource="{Binding}" Background="Aquamarine" Grid.Row="3" Margin="187,39,540,10"/>

        <StackPanel x:Name="DetectiveNotes" Grid.Column="1" Grid.RowSpan="4" Background="Aqua">
            <DataGrid x:Name="DNotes_Characters" ItemsSource="{Binding}"/>
            <DataGrid x:Name="DNotes_Weapons" ItemsSource="{Binding}" />
            <DataGrid x:Name="DNotes_Rooms" ItemsSource="{Binding}" />
        </StackPanel>

        <ListBox ItemsSource="{Binding Players}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Path=Item.ToString()}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Canvas x:Name="gameboard" Grid.Column="0" Background="LightGray" Grid.RowSpan="3" MouseLeftButtonDown="gameboard_MouseLeftButtonDown" Margin="0,0,0,3">
            <Grid x:Name="gameGrid" Height="761" Width="899">
                <Grid.RowDefinitions>
                    <RowDefinition Height="85*"/>
                    <RowDefinition Height="84*"/>
                    <RowDefinition Height="85*"/>
                    <RowDefinition Height="84*"/>
                    <RowDefinition Height="85"/>
                    <RowDefinition Height="84*"/>
                    <RowDefinition Height="85*"/>
                    <RowDefinition Height="84*"/>
                    <RowDefinition Height="85*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="2" Grid.Row="0" Fill="Brown" Stroke="Gray" StrokeThickness="3"/>
                <Rectangle Grid.Column="6" Grid.Row="0" Fill="DarkGray" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="0" Grid.Row="2" Fill="Yellow" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="0" Grid.Row="6" Fill="Green" Stroke="Gray" StrokeThickness="3" />
