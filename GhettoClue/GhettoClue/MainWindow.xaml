                <Label Background="AliceBlue" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Column="7" Content="KFC"/>
                <Label Background="AliceBlue" Margin="0,0,0,-1" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="7" Content="Baby Mamma's Pad"/>
