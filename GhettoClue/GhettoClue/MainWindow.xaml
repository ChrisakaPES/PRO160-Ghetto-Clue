        <Button x:Name="suggest" Content="SUGGEST" Margin="58,5,65,203" Grid.Row="3" Grid.Column="2" Click="suggest_Click" />
        <Button x:Name="accuse" Content="ACCUSE" Margin="58,110,65,74" Grid.Row="3" Grid.Column="2" Click="accuse_Click"/>
