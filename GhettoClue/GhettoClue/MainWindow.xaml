                <Rectangle Grid.Column="7" Grid.Row="2" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="8" Grid.Row="2" Fill="Red" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="2" Grid.Row="3" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="3" Grid.Row="3" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="5" Grid.Row="3" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="6" Grid.Row="3" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="7" Grid.Row="3" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="8" Grid.Row="3" Fill="Black" Stroke="Gray" StrokeThickness="3" />
                <Rectangle Grid.Column="2" Grid.Row="4" Fill="Black" Stroke="Gray" StrokeThickness="3" />
